% This hw.sty is the style file for my hwks and stuff.

% conversion to roman numerals
\makeatletter
\newcommand*{\rom}[1]{\expandafter\@slowromancap\romannumeral #1@}
\makeatother

\newtheoremstyle{quest}{\topsep}{\topsep}{}{}{\bfseries}{}{ }{\thmname{#1}\thmnote{ #3}}
\theoremstyle{quest}

\newcounter{qsection}
\newcounter{qsubsection}[qsection]
\newcounter{qsubsubsection}[qsubsection]

\makeatletter
% acts as a question section
\newtheorem*{q@question}{
    \stepcounter{qsection} % acts as subsection
    Q. \arabic{qsection}
}
\makeatother

% acts as a question subsection
\newtheorem*{subquestion}{
    \stepcounter{qsubsection} % acts as subsection
    Q. \arabic{qsection}.\arabic{qsubsection}
}

\newtheorem*{subsubquestion}{
    \stepcounter{qsubsubsection} % acts as subsection
    Q. \arabic{qsection}.\arabic{qsubsection}.\arabic{qsubsubsection}
}

\newenvironment{question}{
    \setcounter{equation}{0}
    \makeatletter
    \begin{q@question}
        \makeatother
}{
        \makeatletter
    \end{q@question}
    \makeatother
}

